<div class="row mt-4">
  <div class="col-lg-6 offset-lg-3">
    <div class="card">
      <div class="card-body">
        <div class="card-title">
          <h3>Update Event</h3>
        </div>
        <div class="card-text">
          <form action="/events/{{event.id}}?_method=PUT" method="post">
            {{> events-form }}
            <div class="text-right">
              <a href="/events/{{event.id}}" class='text-muted mr-2'>Cancel</a>
              <button type="submit" class="btn btn-primary" name="button">Update</button>
            </div>
          </form>
        </div>
        <form action="/events/{{event.id}}?_method=DELETE" method="post">
          <button type="submit" class='btn btn-danger'>Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
